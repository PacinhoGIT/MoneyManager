<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/tvNowaKategoria"
        android:text="Nazwa nowej kategorii"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/tvDodajNowaKategorie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="15"
        android:layout_marginTop="58dp"
        android:id="@+id/edNowaKategoria"
        android:textAlignment="center"
        android:layout_below="@+id/tvNowaKategoria"
        android:layout_centerHorizontal="true"
        android:hint="nazwa nowej kategorii" />

    <Button
        android:text="Dodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNowaKategoria"
        android:layout_below="@+id/edNowaKategoria"
        android:layout_marginTop="73dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Dodaj nową kategorię"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/tvDodajNowaKategorie"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_manage"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/tvDodajNowaKategorie"
        android:layout_toLeftOf="@+id/tvDodajNowaKategorie"
        android:layout_toStartOf="@+id/tvDodajNowaKategorie" />

</RelativeLayout>